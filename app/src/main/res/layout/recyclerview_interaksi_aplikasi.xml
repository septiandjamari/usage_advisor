<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7.5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7.5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/thumbnailInteraksi"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/white"
                android:id="@+id/namaAplikasiInteraksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="App Name"
                android:textSize="20dp" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/terakhirDipakaiInteraksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terakhir dipakai : 24.20" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/durasiInteraksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waktu Pemakaian : 3 Jam 46 Menit" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/frekuensiInteraksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frekuensi Pemakaian : 15 Kali" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>