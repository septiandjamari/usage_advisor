<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID pengguna anda:" />

    <TextView
        android:id="@+id/personal_id_pengguna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="ID pengguna anda:"
        android:layout_marginBottom="25dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="Anda belum masuk di dalam\ngrup manapun"
        android:textAlignment="center" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/personal_buat_grup"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="BUAT GRUP" />

    <Button
        android:id="@+id/personal_gabung_grup"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="GABUNG GRUP" />

</LinearLayout>